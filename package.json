{
  "name": "my_uniplan",
  "private": true,
  "version": "0.1.0",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "concurrently": "^9.1.2",
    "eslint": "^8.57.0",
    "eslint-plugin-react": "^7.37.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.5"
  },
  "scripts": {
    "dev": "concurrently \"npm run dev --prefix frontend\" \"npm run dev --prefix backend\"",
    "prepare": "husky",
    "lint": "eslint \"backend/**/*.js\" \"frontend/src/**/*.{js,jsx,ts,tsx}\" --max-warnings=0",
    "lint:fix": "npm run lint -- --fix",
    "test": "echo \"(root) no tests yet - add tests in backend & frontend later\"",
    "build:frontend": "cd frontend && npm ci && npm run build",
    "build:frontend:local": "cd frontend && npm run build",
    "vercel:build": "npm run build:frontend",
    "preview:build": "npm run build:frontend:local && npx serve frontend/build"
  },
  "lint-staged": {
    "backend/**/*.js": [
      "eslint --fix"
    ],
    "frontend/src/**/*.{js,jsx,ts,tsx}": [
      "eslint --fix"
    ]
  },
  "dependencies": {
    "@vercel/analytics": "^1.5.0",
    "axios": "^1.9.0"
  }
}
